<div class="container">
  <div class="row">
    <h3 class="col-9">投稿一覧</h3>
    <div class="">
      <%= link_to "新規投稿", new_admin_post_path, class: "btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <table class="col-10 text-center m-3">
      <thead>
        <tr class="table-secondary">
          <td>投稿日時</td>
          <td>件名</td>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
            <td><%= link_to post.name, admin_post_path(post.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row justify-content-center">
    <%= paginate @posts %>
  </div>
</div>