<div class="container">
  <div class="row">
    <div class="row">
      <div class="h5 col mb-3 font-weight-bold">
        <%=@post.name %>
      </div>
    </div>
    <div class="col mt-4 ">
      <div class="row mt-4 mx-5">
        <div class="item-image">
          <%=image_tag @post.image, size:"350x250" %>
        </div>
      </div>
      <div class="row">
        <div class="col mb-4">
          <%=@post.introduction %>
        </div>
      </div>
    </div>
  </div>
</div>