<div class="container">
  <div class="row">
    <h3 class="col-9">新規会員登録</h3>
  </div>

   <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table class="user_info user_form">
      <thead>
        <th></th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td>名前</td>
          <td colspan="2"><%= f.text_field :name, autofocus: true, :placeholder =>"山田太郎" %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td colspan="2"><%= f.text_field :name_kana, :placeholder =>"ヤマダタロウ" %></td>
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td colspan="2"><%= f.email_field :email, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :postal_code, "郵便番号(ハイフンなし7桁)" %></td>
          <td colspan="2"><%= f.text_field :postal_code, :placeholder =>"5300000", class: "jpostal_code" %></td>
        </tr>
        <tr>
          <td><%= f.label :address, "住所" %></td>
          <td colspan="2"><%= f.text_field :address, class: "jpostal_address" %></td>
        </tr>
        <tr>
          <td><%= f.label :telephone_number, "電話番号(ハイフンなし10or11桁)　" %></td>
          <td colspan="2"><%= f.text_field :telephone_number, :placeholder =>"00011112222" %></td>
        </tr>
        <tr>
          <td><%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %></td>
          <td colspan="2"><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
          <td colspan="2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td colspan="2"><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>

  <h3 class="mt-3">既に登録済みの方</h3>
  <p><%= link_to "こちら", new_user_session_path, class: "underline" %>からログインしてください。</p>
</div>