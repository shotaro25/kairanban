<% if !Favorite.exists?(user_id: current_user.id, post_id: post.id) %>
  <%= link_to post_favorites_path(post.id), method: :post, remote: true, class:"favorite-btn" do %>
    <i class="fas fa-star star-icon1"></i>
  <% end %>
  お気に入り
<% else %>
  <%= link_to post_favorites_path(post.id), method: :delete, remote: true, class:"favorite-btn" do %>
    <i class="fas fa-star star-icon2"></i>
  <% end %>
  お気に入り済
<% end %>